-- إشعار البدء
game.StarterGui:SetCore("SendNotification",  {
    Title = "VIP FPS";
    Text = "xxxxxTheFox";
    Icon = "rbxassetid://115469660765124";
    Duration = 20;
})

-- إعدادات عامة
local decalsyeeted = true
local g = game
local w = g.Workspace
local l = g.Lighting
local t = w.Terrain
local s = settings()

-- إعدادات المياه (شكل مسطّح وغير مرئي)
t.WaterWaveSize = 0
t.WaterWaveSpeed = 0
t.WaterReflectance = 0
t.WaterTransparency = 1

-- إعدادات الإضاءة (بدون ظلال أو ضباب)
l.GlobalShadows = false
l.Brightness = 0
l.FogStart = 1e6 -- إزالة الضباب
l.FogEnd = 1e6

-- تقليل جودة الرسومات لأدنى مستوى
s.Rendering.QualityLevel = Enum.QualityLevel.Level01

-- تعطيل المؤثرات البصرية في الإضاءة
for _, e in ipairs(l:GetChildren()) do
    if e:IsA("PostEffect") or e:IsA("BlurEffect") or e:IsA("SunRaysEffect")
    or e:IsA("ColorCorrectionEffect") or e:IsA("BloomEffect") or e:IsA("DepthOfFieldEffect") then
        e.Enabled = false
    end
end

-- تعديل خصائص الأجزاء لمظهر PS1
for _, v in ipairs(g:GetDescendants()) do
    if v:IsA("BasePart") then
        v.Material = Enum.Material.Plastic
        v.Reflectance = 0
        v.Color = Color3.fromRGB(math.random(100,255), math.random(100,255), math.random(100,255))
    end

    if decalsyeeted and (v:IsA("Decal") or v:IsA("Texture")) then
        v.Transparency = 1
    elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
        v.Lifetime = NumberRange.new(0)
    elseif v:IsA("Explosion") then
        v.BlastPressure = 1
        v.BlastRadius = 1
    elseif v:IsA("Fire") or v:IsA("SpotLight") or v:IsA("Smoke") then
        v.Enabled = false
    elseif v:IsA("MeshPart") then
        v.Material = Enum.Material.Plastic
        v.Reflectance = 0
        v.TextureID = ""
    end
end

-- تعطيل الأصوات
for _, sound in ipairs(g.SoundService:GetChildren()) do
    if sound:IsA("Sound") then
        sound.Volume = 0
    end
end
